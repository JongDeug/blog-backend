{
  "name": "blog-backend",
  "packageManager": "yarn@4.2.2",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1",
    "@types/cors": "^2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9",
    "@types/multer": "^1",
    "@types/node": "^20.14.1",
    "@types/nodemailer": "^6",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yamljs": "^0.2.34",
    "@yarnpkg/pnpify": "^4.1.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "node-mocks-http": "^1.14.1",
    "prettier": "^3.3.1",
    "prisma": "5.15.0",
    "prisma-markdown": "^1.0.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.15.6",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@prisma/client": "5.15.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "reflect-metadata": "^0.2.2",
    "swagger-cli": "^4.0.4",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "scripts": {
    "postinstall": "yarn pnpify prisma generate",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "check": "tsc --noEmit && prettier 'src/**/*.ts' --check && rm -r node_modules",
    "format": "prettier 'src/**/*.ts' --write && rm -r node_modules",
    "dev": "yarn api-docs && tsx watch --clear-screen=false ./src/index.ts",
    "api-docs": "swagger-cli bundle ./src/swagger/openapi.yaml --outfile ./src/swagger/swagger.yaml --type yaml",
    "start:prod": "yarn prisma migrate deploy && node dist/index.js"
  }
}
