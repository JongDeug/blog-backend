generator client {
  provider = "prisma-client-js"
  output   = "prisma-client" // yarn PnP 전략 때문에 사용
}

generator markdown {
  provider = "prisma-markdown"
  output   = "./ERD.md"
  title    = "게시판 프로젝트 ERD"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

