generator client {
  provider        = "prisma-client-js"
  output          = "./prisma-client" // yarn PnP 전략 때문에 prisma-client를 저장할 node_modules 폴더가 없어서 직접 담을 폴더 생성.
  previewFeatures = ["prismaSchemaFolder"] // 파일 분리
}

generator markdown {
  provider = "prisma-markdown"
  output   = "./ERD.md"
  title    = "블로그 프로젝트 ERD"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// [주로 사용하는 명령어]
// yarn prisma migrate dev : 현재 파일 기반으로 DB 업데이트, git 처럼 관리 가능
// yarn prisma migarte dev --create-only : 실제 반영하지 않고 migration 파일만 변경
// yarn pnpify prisma generate : 현재 파일 기반으로 @prisma/client 생성

// [알고 가지]
// - @relation 붙으면 객체임
// - 일 대 일 관계 설정 시 나중에 생성 되는 곳에 @relation 을 붙여 주면 됨
// - @unique 는 해당 테이블 행에서 오직 유일하다는 뜻

/// 회원 테이블
///
/// @namespace Blog
model User {
  /// Pirmary Key
  id           String  @id @default(uuid())
  /// 이름
  name         String  @db.VarChar(100)
  /// 이메일
  email        String  @unique @db.VarChar(200)
  /// 비밀번호
  password     String
  /// 간단한 소개
  description  String? @db.VarChar(300)
  /// refresh token
  refreshToken String? @db.VarChar(1024)

  /// ---
  /// RELATIONS
  /// ---
  posts    Post[]
  comments Comment[]
}

/// 비회원 테이블
///
/// 비회원도 게시글 좋아요, 댓글 기능을 사용할 수 있도록 하는 테이블이다.
///
/// @namespace Blog
model GuestUser {
  /// Pirmary Key
  id       String  @id @default(uuid())
  /// 닉네임
  nickName String? @db.VarChar(100)
  /// 이메일
  email    String? @db.VarChar(200)
  /// 비밀번호
  password String?

  /// ---
  /// RELATIONS
  /// ---
  postLikes PostLike[]
  comments  Comment[]
}

/// 비회원 <=> 게시글 다대다, 게시글 좋아요 테이블
///
/// @namespace Blog
model PostLike {
  /// Foreign Key
  ///
  /// 게시글 ID {@link Post.id}
  postId String
  post   Post   @relation(fields: [postId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  /// Foreign Key
  ///
  /// 비회원 ID {@link GuestUser.id}
  guestUserId String
  guestUser   GuestUser @relation(fields: [guestUserId], references: [id])

  @@id([postId, guestUserId])
}

/// 게시글 테이블
///
/// @namespace Blog
model Post {
  /// Pirmary Key
  id        String   @id @default(uuid())
  /// 제목
  title     String   @db.VarChar(200)
  /// 내용
  content   String   @db.LongText
  /// 생성일
  createdAt DateTime @default(now())
  /// 수정일
  updatedAt DateTime @updatedAt

  /// ---
  /// RELATIONS
  /// ---
  comments  Comment[]
  images    Image[]
  tags      PostTag[]
  postLikes PostLike[]

  /// Foreign Key
  ///
  /// 작성자 ID {@link User.id}
  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  /// Foreign Key
  ///
  /// 작성자 ID {@link Category.id}
  categoryName String
  category     Category @relation(fields: [categoryName], references: [name], onUpdate: Cascade, onDelete: Restrict)
}

/// 태그 테이블
///
/// @namespace Blog
model Tag {
  /// Primary Key, 태그 이름
  name String @id

  /// ---
  /// RELATIONS
  /// ---
  posts PostTag[]
}

/// 포스트, 태그 다대다 테이블
///
/// @namespace Blog
model PostTag {
  /// Foreign Key
  ///
  /// 게시글 ID {@link Post.id}
  postId String
  post   Post   @relation(fields: [postId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  /// Foreign Key
  ///
  /// 태그 ID {@link Tag.id}
  tagId String
  tag   Tag    @relation(fields: [tagId], references: [name], onUpdate: Cascade, onDelete: Cascade)

  @@id([postId, tagId])
}

/// 이미지 테이블
///
/// @namespace Blog
model Image {
  /// Pirmary Key
  id  String @id @default(uuid())
  /// 이미지 url
  url String

  /// Foreign Key
  ///
  /// 게시글 ID {@link Post.id}
  postId String
  post   Post   @relation(fields: [postId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}

/// 카테고리 테이블
///
/// @namespace Blog
model Category {
  /// Primary Key, 카테고리 이름
  name String @id

  /// ---
  /// RELATIONS
  /// ---
  posts Post[]
}

/// 댓글 테이블
///
/// @namespace Blog
model Comment {
  /// Pirmary Key
  id      String @id @default(uuid())
  /// 내용
  content String @db.VarChar(200)

  /// ---
  /// RELATIONS
  /// ---
  // [자식, "다"] parentCommentId 는 "다" 인 ChildComment 가 가지고 있음 => 그래서 자식 쪽에(parentComment가 있는 곳) @relation
  childComments Comment[] @relation("ParentComment")

  /// Foreign Key
  ///
  /// 부모 댓글 ID {@link Comment.id}
  // [부모, "일"]
  parentCommentId String? // 외래키(ParentComment)
  parentComment   Comment? @relation("ParentComment", fields: [parentCommentId], references: [id])

  /// Foreign Key
  ///
  /// 게시글 ID {@link Post.id}
  postId String
  post   Post   @relation(fields: [postId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  /// Foreign Key
  ///
  /// 작성자(회원) ID {@link User.id}
  authorId String?
  author   User?   @relation(fields: [authorId], references: [id])

  /// Foreign Key
  ///
  /// 작성자(비회원) ID {@link GuestUser.id}
  guestUserId String?
  guestUser   GuestUser? @relation(fields: [guestUserId], references: [id])
}

