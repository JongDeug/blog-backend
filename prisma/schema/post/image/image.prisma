/// 이미지 테이블
///
/// @namespace Blog
model Image {
  /// Pirmary Key
  id           Int     @id @default(autoincrement())

  /// 이미지 url
  url String @db.VarChar(500) @unique

  /// Foreign Key
  ///
  /// 게시글 ID {@link Post.id}
  postId Int 
  post   Post   @relation(fields: [postId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}
