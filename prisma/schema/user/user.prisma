/// 회원 테이블
///
/// @namespace Blog
model User {
  /// Primary Key
  id           Int     @id @default(autoincrement())

  /// 이름
  name         String  @db.VarChar(100)

  /// 이메일
  email        String  @unique @db.VarChar(200)

  /// 비밀번호(해시값)
  password     String  @db.VarChar(255)

  /// 역할
  role         Role    @default(USER)

  /// 생성일
  createdAt DateTime @default(now())

  /// ---
  /// RELATIONS
  /// ---
  posts    Post[]
  comments Comment[]
}

enum Role {
  ADMIN
  USER
}
